<!DOCTYPE html>
<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

<h1>Editing Book</h1>
<%= form_for(@post) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
<td>
<%= link_to "Show", post_path(@post.id),class: "show_#{@post.id}"%>

<%= link_to "back", '/posts/new',class: "back"%>
</td>

<% end %>
